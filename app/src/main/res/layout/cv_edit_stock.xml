<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_edit_stock"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp">

        <TextView
            android:id="@+id/edit_stock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/edit_stock_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edit_stock_photo"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-1dp"
            android:onClick="edtStcBttn"
            android:src="@drawable/edit_button" />

        <TextView
            android:id="@+id/edit_stock_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_stock_name"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/edit_stock_photo"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/edit_stock_date"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/edit_stock_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_stock_photo"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="16dp"
            android:textSize="12sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>