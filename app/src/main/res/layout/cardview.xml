<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/caffe_photo"
            android:layout_width="66dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/caffe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_toEndOf="@+id/caffe_photo"
            android:layout_toRightOf="@+id/caffe_photo"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/caffe_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caffe_name"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/caffe_photo"
            android:layout_toRightOf="@+id/caffe_photo" />

        <TextView
            android:id="@+id/caffe_assortment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caffe_address"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/caffe_photo"
            android:layout_toRightOf="@+id/caffe_photo" />

        <Button
            android:id="@+id/buttonCtg"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="ctgClickToCaffeMenu"
            android:layout_width="33dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:foreground="@android:drawable/ic_media_play" />

    </RelativeLayout>
</android.support.v7.widget.CardView>