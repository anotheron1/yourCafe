<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/actionbar_background</item>
        <item name="colorPrimaryDark">@color/defaultContentColor</item>
        <item name="colorAccent">@color/actionbar_text_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- стиль для заднего фона -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/actionbar_background</item>
        <item name="android:titleTextStyle">@style/MyTextAppearance</item>
    </style>
    <!-- стиль для текста -->
    <style name="MyTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/background_light</item>
    </style>


</resources>
